@model IEnumerable<ModelLayer.Service.EmpModel>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "GetAllEmployees";
}

<h1>Employee Details</h1>

<p>
    <a asp-action="AddEmployee" class="btn btn-info text-white">Add New</a>
</p>
@*<p>
     @Context.Session.GetInt32("UserId");
</p>
*@
<table class="table">
    
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpName)
            </td>
            <td>
                <img src="@Url.Content(item.ProfileImg)"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>

                @Html.ActionLink("Edit", "UpdateEmployee", new {  id=item.EmpID }) |
                @Html.ActionLink("Details", "Details", new { id=item.EmpID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.EmpID })
            </td>
        </tr>
}
    </tbody>
</table>
