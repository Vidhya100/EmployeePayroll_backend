                <label asp-for="ProfileImg" class="control-label"></label>
                <input asp-for="ProfileImg" class="form-control ProfileImg" />
                <span asp-validation-for="ProfileImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control Gender" />
                <span asp-validation-for="Gender" class="text-danger"></span>
